<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Formulaires questions</title>

        <!-- Bootstrap CSS -->
        <link
            rel="stylesheet"
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        />
        <link 
            rel="stylesheet"
            href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" 
        />
        <link rel="stylesheet" 
              href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css"
        />

        <script
            type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"
        ></script>
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css"
        />

        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.standalone.min.css"
            rel="stylesheet"
        />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js"></script>
    </head>
    <style>
        body {
            background-color: #fbfbfb;
        }

        .poll {
            padding: 20px;
            border: 1px solid #ccc;
        }

        .card {
            margin: 40px 0;
            box-shadow: 0 5px 5px rgba(0, 0, 0, 0.1);
        }

        .card-title {
            margin-bottom: 30px;
        }

        .poll-container {
            margin: 60px auto;
            padding: 25px;
            background: #fff;
            box-shadow: 0 5px 8px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
        }

        h1.poll-title {
            text-align: center;
        }
    </style>
    <body>
        <div class="container poll-container">
            <% for(var items=0; items < renderedTemplate.length; items++){ %>
                <h1 class="poll-title"><%= items.poll.name %></h1>
            <% }); %>
            <form class="form-horizontal" action="" method="POST">
            <%  for(var items=0; items < renderedTemplate.length; items++){ %>
                <div class="row">
                    <div class="col">
                        <div class="card">
                            <div class="card-body">
                                <% if (items.questions.type =="text") %>
                                   <h4 class="card-title"><%= items.questions.question %></h4>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                              <i class="fa fa-text-height"> </i>
                                            </span>
                                        </div>
                                        <input
                                            type="text"
                                            class="form-control form-control-lg"
                                            name=""
                                            id=""
                                            aria-describedby="helpId"
                                            placeholder=""
                                        />
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <% if (items.questions.type =="text") { %>
                                    <h4 class="card-title"><%= items.questions.question %></h4>
                                
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                              <i class="fa fa-calendar"> </i>
                                            </span>
                                        </div>
                                        <input
                                            class="form-control form-control-lg"
                                            id="date"
                                            name="date"
                                            placeholder="MM/DD/YYYY"
                                            type="text"
                                        />
                                    </div>
                                </div>
                            <% } %>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <% if (items.questions.type == "email") { %>
                                   <h4 class="card-title"><%= items.questions.question %></h4>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                              <i class="fa fa-envelope"> </i>
                                            </span>
                                        </div>
                                        <input
                                            type="email"
                                            name=""
                                            id="input"
                                            class="form-control form-control-lg"
                                            value=""
                                            required="required"
                                        />
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <% if (items.questions.type == "tel") { %>
                                   <h4 class="card-title"><%= items.questions.question %></h4>
                                
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                              <i class="fa fa-phone"> </i>
                                            </span>
                                        </div>
                                        <input
                                            type="tel"
                                            name=""
                                            id="input"
                                            class="form-control form-control-lg"
                                            value=""
                                            required="required"
                                            title=""
                                        />
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <% if (items.questions.type == "number") { %>
                                    <h4 class="card-title"><%= items.questions.item %></h4>
                                
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                              <i class="fa fa-sort-numeric-asc"> </i>
                                            </span>
                                        </div>
                                        <input
                                            type="number"
                                            name=""
                                            id="input"
                                            class="form-control form-control-lg"
                                            value=""
                                            required="required"
                                        />
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <% if (items.questions.type == "range") { %>
                                    <h4 class="card-title"><%= items.questions.item %></h4>
                                
                                    <div class="form-group">
                                        <input
                                            type="range"
                                            name="blaRange"
                                            id="input"
                                            class="form-control form-control-lg"
                                            value=""
                                            min="5"
                                            max="100"
                                            step="3"
                                            required="required"
                                            title=""
                                            oninput="blaRangeOuput.value = blaRangeOuput.value"
                                        />
                                        <output
                                            name="blaRangeOuput"
                                            id="blaRangeOuput"
                                            >0</output
                                        >
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <% if (items.questions.type == "selector") { %>
                                    <h4 class="card-title"><%= items.questions.item %></h4>
                              
                                    <div class="form-group">
                                        <select
                                            class="select form-control"
                                            id="select"
                                            name="select"
                                        >
                                            <option value="First Choice"
                                                >First Choice</option
                                            >
                                            <option value="Second Choice"
                                                >Second Choice</option
                                            >
                                            <option value="Third Choice"
                                                >Third Choice</option
                                            >
                                        </select>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary btn-block">
                                    Submit
                                </button>
                            </div>
                        </div>
                <input type="hidden" name="poll" value="1"/>
            <% } %>   
            </form>
        </div>

        <script
            type="text/javascript"
            src="https://code.jquery.com/jquery-1.11.3.min.js"
        ></script>
        <script type="text/javascript" src="test.js"></script>
        <script src="ejs.js"></script>
        <script
            type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"
        ></script>
        <script>
            $(document).ready(function () {
                var date_input = $('input[name="date"]'); //our date input has the name "date"
                var container =
                    $('.bootstrap-iso form').length > 0
                        ? $('.bootstrap-iso form').parent()
                        : 'body';
                date_input.datepicker({
                    format: 'mm/dd/yyyy',
                    container: container,
                    todayHighlight: true,
                    autoclose: true,
                });
            });
        </script>
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css"
        />
    </body>

</html>
